
<div class="container">
  <div class="row">
    <h2>Add a tasty Chicken</h2>
    <form class="create-chicken">

      <div class="form-group">
        <label for="ca">Chicken Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="slee">Hungry/Queasy?</label>
        <br>
        <input type="radio" name="devoured" value="1" checked> Devoured!
        <br>
        <input type="radio" name="devoured" value="0"> Safe!
      </div>

      <button type="submit"> Make Chicken</button>
    </form>
  </div>

  <div class="row">
    {{!-- left --}}
    <div class="col-sm-6 col-md-6 col-lg-6">
      <h2>Chickens that are not devoured!</h2>
      <ul>
        {{#each chickens}} {{#unless devoured}} {{> chickens/chicken-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>
    {{!-- right --}}
    <div class="col-sm-6 col-md-6 col-lg-6">
      <h2>Chickens that are devoured!</h2>
      <ul>
        {{#each chickens}} {{#if devoured}} {{> chickens/chicken-block devoured=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>